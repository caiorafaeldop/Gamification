// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  LEADER
  MEMBER
}

enum TaskStatus {
  todo
  in_progress @map("in-progress")
  done
}

// Removido o enum TaskDifficulty, pois a dificuldade agora Ã© um Int.

enum ActivityType {
  TASK_COMPLETED
  TASK_CREATED
  TASK_ASSIGNED
  TASK_STATUS_CHANGED
  TASK_DELETED
  POINTS_ADJUSTED
  TIER_ACHIEVED
  STREAK_UPDATED

  PROJECT_CREATED
  PROJECT_DELETED
  USER_JOINED_PROJECT
  USER_LEFT_PROJECT
  ROLE_CHANGED
  USER_STATUS_CHANGED
  ACHIEVEMENT_EARNED
  ADMIN_ACTION // Adicionado o novo tipo de atividade
}

model User {
  id             String        @id @default(uuid())
  name           String
  course         String?       // Adicionado conforme frontend
  avatarColor    String?       // Adicionado conforme frontend
  email          String        @unique
  passwordHash   String
  role           Role          @default(MEMBER)
  isActive       Boolean       @default(true)
  connectaPoints Int           @default(0)
  tierId         String
  tier           Tier          @relation(fields: [tierId], references: [id])
  streakCurrent  Int           @default(0)
  streakBest     Int           @default(0)
  lastActivityAt DateTime?     @updatedAt
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  createdTasks    Task[]         @relation("CreatedTasks")
  assignedTasks   Task[]         @relation("AssignedTasks")
  activityLogs    ActivityLog[]
  memberOfProjects ProjectMember[]
  leaderOfProjects Project[]      @relation("ProjectLeader")
  userAchievements UserAchievement[]
  notifications  Notification[]
  orders         Order[]
}

model Project {
  id          String         @id @default(uuid())
  title       String         @unique
  description String?
  category    String?        // Renamed from focusArea
  leaderId    String
  leader      User           @relation("ProjectLeader", fields: [leaderId], references: [id])
  members     ProjectMember[]
  tasks       Task[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  status      String?        @default("active")
  progress    Int            @default(0)
  xpReward    Int            @default(100)
  color       String?
}

model ProjectMember {
  userId    String
  projectId String
  user      User    @relation(fields: [userId], references: [id])
  project   Project @relation(fields: [projectId], references: [id])
  assignedAt DateTime @default(now())

  @@id([userId, projectId])
}

model Task {
  id                  String        @id @default(uuid())
  title               String
  description         String?
  status              TaskStatus    @default(todo)
  difficulty          Int           // Alterado de TaskDifficulty para Int
  pointsReward        Int
  estimatedTimeMinutes Int?
  projectId           String
  project             Project       @relation(fields: [projectId], references: [id])
  createdById         String
  createdBy           User          @relation("CreatedTasks", fields: [createdById], references: [id])
  assignedToId        String?
  assignedTo          User?         @relation("AssignedTasks", fields: [assignedToId], references: [id])
  dueDate             DateTime?
  completedAt         DateTime?
  tags                String[]      @default([])
  requiredTierId      String?
  requiredTier        Tier?         @relation("RequiredTier", fields: [requiredTierId], references: [id])
  isExternalDemand    Boolean       @default(false)
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
}

model Tier {
  id        String   @id @default(uuid())
  name      String   @unique
  minPoints Int
  order     Int      @unique
  icon      String?
  users     User[]
  tasks     Task[]   @relation("RequiredTier")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ActivityLog {
  id          String      @id @default(uuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  type        ActivityType
  description String
  pointsChange Int?
  createdAt   DateTime    @default(now())
}

model Achievement {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  points      Int      @default(10)
  color       String?  // Adicionado
  icon        String?
  criteria    String   // e.g., "tasks completed 10", "points 100", "streak 5"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userAchievements UserAchievement[]
}

model UserAchievement {
  id            String      @id @default(uuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  achievementId String
  achievement   Achievement @relation(fields: [achievementId], references: [id])
  earnedAt      DateTime    @default(now())

  @@unique([userId, achievementId])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  read      Boolean  @default(false)
  type      String   // info, success, warning, error
  createdAt DateTime @default(now())
}

model StoreItem {
  id          String   @id @default(uuid())
  name        String
  description String
  cost        Int
  icon        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orders      Order[]
}

model Order {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  itemId    String
  item      StoreItem @relation(fields: [itemId], references: [id])
  cost      Int
  createdAt DateTime  @default(now())
}